  <div class="border">
  <h1>関覧</h1>
<div class="field_house">
  <p><strong>物件名: </strong><%= @house.house_name %></p> <br>
  <p><strong>賃料: </strong><%= @house.price %></p> <br>
  <p><strong>住所: </strong> <%= @house.address %></p> <br>
  <p><strong>築年数: </strong> <%= @house.age %></p> <br>
  <p><strong>備考: </strong><%= @house.note %></p> <br>
</div>
  </div>

<% if @house.stations.present? %>

  <% index = 0 %>
  <% @house.stations.each do |station| %>
  <h2>最寄り駅: <%= index += 1 %></h2>
<div class="field_station">

  <p><strong>路線名: </strong><%= station.route_name %></p>
  <p><strong>駅名: </strong><%= station.station_name%></p>
  <p><strong>徒歩分数: </strong><%= station.time %></p>

  <% end %>
<% end %>
</div>








